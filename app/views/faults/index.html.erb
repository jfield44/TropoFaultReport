<p id="notice"><%= notice %></p>

<table align="center">
  <thead>
    <tr>
      <th>Fault Type</th>
      <th>Fault Description</th>
      <th>Fault Reported By</th>
      <th>Item Identifier</th>
      <th>Item Location</th>
      <th>Fault Status</th>
      <th>Fault Reported At</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @faults.each do |fault| %>
      <tr>
        <td><%= fault.fault_type %></td>
        <td><%= fault.fault_description %></td>
        <td><%= fault.fault_reported_by %></td>
        <td><%= fault.item.item_identifier %></td>
        <td><%= fault.item.item_location %></td>
        <td><%= fault.fault_status %></td>
        <td><%= fault.created_at %></td>
        <td><%= link_to 'Show', fault %></td>
        <td><%= link_to 'Edit', edit_fault_path(fault) %></td>
        <td><%= link_to 'Destroy', fault, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

